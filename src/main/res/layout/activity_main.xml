<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/rssSettingsButton"
        android:layout_width="72dp"
        android:layout_height="74dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/rss_settings"
        android:onClick="gotoRSSSettings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/rss" />

    <ImageButton
        android:id="@+id/reloadRssButton"
        android:layout_width="72dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/rss_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/reload" />


    <ListView
        android:id="@+id/rssView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="642dp"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@android:color/holo_green_light"
        android:dividerHeight="5dp"
        app:layout_constraintBottom_toTopOf="@+id/rssSettingsButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.120000005" />

    <!-- Below layout xml is used for each ListView's item.-->


</androidx.constraintlayout.widget.ConstraintLayout>